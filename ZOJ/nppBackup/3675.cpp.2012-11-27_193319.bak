#include <cstdio>
#include <cstring>
int N,M,ANS;
int t1,t2,na;
int find(int n,int k);
inline int lowbit(int x)
{
	return x&(x^(x-1));
}
//inline void pri(int n)
int main()
{

	int i,j;
	char c;
	while (scanf("%d",&N)!=EOF)
	{
		t1=t2=0;
		getchar();
		for (i=0;i<N;i++)
		if(scanf("%c",&c),c=='*')
		{
			case '*':
				t1+=1<<i;
				t2+=1<<(N-i-1);
		}
		while (!(t1 & 1))
		{
			t1>>=1;
			N--;
		}
		while (!(t2 & 1))
		{ 
			t2>>=1;
			N--;
		}
		scanf("%d",&M);
		na=(1<<M)-1;
		if (t1)
		{
			ANS=M;
			find(0,0);
			printf("%d\n",ANS);
		}
		else
			printf("-1\n");
	}
	
}
int find(int n,int k)//Nails,deep,lowbit
{
	n&=na;
	if (n==na && k<ANS)ANS=k;
	if (k>=ANS)return 0;
	for (int i=lowbit(~n);i<=na;i<<=1)
	{
		if (((~na)&(t1*i))&na)find(na | (t1*i),k+1);
		if (((~na)&(t2*i))&na)find(na | (t2*i),k+1);
	}
}
